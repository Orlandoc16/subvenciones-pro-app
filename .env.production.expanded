# Variables de entorno para producción VPS - VERSIÓN EXPANDIDA
# SubvencionesPro con APIs Nacionales y Regionales

# ================================
# INFORMACIÓN DE LA APLICACIÓN
# ================================
VITE_APP_NAME=SubvencionesPro
VITE_APP_VERSION=2.0.0
VITE_APP_ENV=production

# ================================
# CONFIGURACIÓN DE APIS EXPANDIDAS
# ================================

# APIs NACIONALES OFICIALES (Prioridad Máxima)
VITE_API_SNPSAP_REST=/api/snpsap-rest
VITE_API_SNPSAP_LEGACY=/api/snpsap
VITE_API_BDNS_URL=/api/bdns
VITE_API_DATOS_GOB_URL=/api/datos
VITE_API_TRANSPARENCIA=/api/transparencia

# APIs REGIONALES (Alta Prioridad)
VITE_API_ANDALUCIA=/api/regional/andalucia
VITE_API_MADRID=/api/regional/madrid
VITE_API_CATALUNYA=/api/regional/catalunya
VITE_API_PAIS_VASCO=/api/regional/euskadi
VITE_API_GALICIA=/api/regional/galicia
VITE_API_VALENCIA=/api/regional/valencia
VITE_API_CASTILLA_LEON=/api/regional/castilla-leon
VITE_API_CASTILLA_MANCHA=/api/regional/castilla-mancha
VITE_API_EXTREMADURA=/api/regional/extremadura
VITE_API_ARAGON=/api/regional/aragon
VITE_API_ASTURIAS=/api/regional/asturias
VITE_API_MURCIA=/api/regional/murcia
VITE_API_CANARIAS=/api/regional/canarias
VITE_API_CANTABRIA=/api/regional/cantabria
VITE_API_NAVARRA=/api/regional/navarra
VITE_API_RIOJA=/api/regional/rioja
VITE_API_BALEARES=/api/regional/baleares
VITE_API_CEUTA=/api/regional/ceuta
VITE_API_MELILLA=/api/regional/melilla

# ================================
# CONFIGURACIÓN DE AGREGACIÓN
# ================================
VITE_ENABLE_AGGREGATION=true
VITE_ENABLE_DEDUPLICATION=true
VITE_ENABLE_REGIONAL_APIS=true
VITE_MAX_PARALLEL_REQUESTS=10
VITE_API_TIMEOUT_NACIONAL=30000
VITE_API_TIMEOUT_REGIONAL=45000

# ================================
# CONFIGURACIÓN DE CACHE EXPANDIDA
# ================================
VITE_CACHE_TIMEOUT_NACIONAL=300000
VITE_CACHE_TIMEOUT_REGIONAL=600000
VITE_CACHE_TIMEOUT_MOCK=60000
VITE_ENABLE_CACHE_COMPRESSION=true

# ================================
# CONFIGURACIÓN DE PRODUCCIÓN
# ================================
VITE_DEV_MODE=false
VITE_MOCK_DATA=false
VITE_DEBUG=false
VITE_ENABLE_LOGGING=true

# ================================
# LÍMITES Y PAGINACIÓN
# ================================
VITE_MAX_EXPORT_ITEMS=10000
VITE_MAX_SEARCH_RESULTS=5000
VITE_PAGE_SIZE=50
VITE_MAX_CONCURRENT_EXPORTS=3

# ================================
# FEATURES HABILITADAS
# ================================
VITE_FEATURE_ALERTS=true
VITE_FEATURE_EXPORT=true
VITE_FEATURE_DASHBOARD=true
VITE_FEATURE_ADVANCED_FILTERS=true
VITE_FEATURE_REGIONAL_SEARCH=true
VITE_FEATURE_API_MONITORING=true
VITE_FEATURE_BULK_OPERATIONS=true
VITE_FEATURE_FAVORITES=true
VITE_FEATURE_NOTIFICATIONS=true

# ================================
# API KEYS (Opcional - para futuro)
# ================================
# VITE_API_KEY_BDNS=tu_api_key_bdns
# VITE_API_KEY_SNPSAP=tu_api_key_snpsap
# VITE_API_KEY_DATOS_GOB=tu_api_key_datos_gob
# VITE_API_KEY_TRANSPARENCIA=tu_api_key_transparencia

# APIs regionales (si requieren keys en el futuro)
# VITE_API_KEY_ANDALUCIA=tu_api_key_andalucia
# VITE_API_KEY_MADRID=tu_api_key_madrid
# VITE_API_KEY_CATALUNYA=tu_api_key_catalunya

# ================================
# CONFIGURACIÓN DE MONITOREO
# ================================
VITE_ENABLE_API_MONITORING=true
VITE_MONITOR_RESPONSE_TIMES=true
VITE_MONITOR_ERROR_RATES=true
VITE_HEALTH_CHECK_INTERVAL=300000

# ================================
# CONFIGURACIÓN DE ANALYTICS
# ================================
VITE_ENABLE_ANALYTICS=true
# VITE_GA_TRACKING_ID=UA-XXXXXXXXX-X
# VITE_HOTJAR_ID=XXXXXXX
# VITE_MIXPANEL_TOKEN=tu_mixpanel_token

# ================================
# URLs DE SERVICIOS
# ================================
VITE_SUPPORT_URL=https://support.tudominio.com
VITE_DOCS_URL=https://docs.tudominio.com
VITE_FEEDBACK_URL=https://feedback.tudominio.com
VITE_STATUS_URL=https://status.tudominio.com

# ================================
# CONFIGURACIÓN DE SEGURIDAD
# ================================
VITE_ENABLE_RATE_LIMITING=true
VITE_MAX_REQUESTS_PER_MINUTE=60
VITE_ENABLE_CSRF_PROTECTION=true
VITE_ENABLE_XSS_PROTECTION=true

# ================================
# CONFIGURACIÓN DE NOTIFICACIONES
# ================================
VITE_ENABLE_EMAIL_ALERTS=true
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_ENABLE_SMS_ALERTS=false
VITE_NOTIFICATION_FREQUENCY=daily

# URLs de servicios de notificación (opcional)
# VITE_EMAIL_SERVICE_URL=https://api.emailservice.com
# VITE_PUSH_SERVICE_URL=https://api.pushservice.com
# VITE_SMS_SERVICE_URL=https://api.smsservice.com

# ================================
# CONFIGURACIÓN DE BACKUP Y RECOVERY
# ================================
VITE_ENABLE_AUTO_BACKUP=true
VITE_BACKUP_INTERVAL=86400000
VITE_MAX_BACKUP_RETENTION_DAYS=30

# ================================
# CONFIGURACIÓN DE RENDIMIENTO
# ================================
VITE_ENABLE_COMPRESSION=true
VITE_ENABLE_HTTP2=true
VITE_ENABLE_CDN=false
VITE_CDN_URL=https://cdn.tudominio.com

# ================================
# CONFIGURACIÓN DE DESARROLLO
# ================================
# Solo activas en desarrollo - comentadas en producción
# VITE_SHOW_API_RESPONSES=false
# VITE_SHOW_CACHE_STATUS=false
# VITE_SHOW_PERFORMANCE_METRICS=false
# VITE_ENABLE_SOURCE_MAPS=false

# ================================
# CONFIGURACIÓN ESPECÍFICA POR REGIÓN
# ================================

# Configuración de prioridades por región (1=máxima, 5=mínima)
VITE_PRIORITY_NACIONAL=1
VITE_PRIORITY_ANDALUCIA=2
VITE_PRIORITY_MADRID=2
VITE_PRIORITY_CATALUNYA=2
VITE_PRIORITY_PAIS_VASCO=2
VITE_PRIORITY_GALICIA=2
VITE_PRIORITY_VALENCIA=3
VITE_PRIORITY_OTRAS_CCAA=4

# Timeouts específicos por tipo de fuente
VITE_TIMEOUT_API_REST=30000
VITE_TIMEOUT_SCRAPING=60000
VITE_TIMEOUT_BULK_OPERATIONS=120000

# ================================
# CONFIGURACIÓN DE LOGS
# ================================
VITE_LOG_LEVEL=info
VITE_LOG_API_REQUESTS=true
VITE_LOG_API_RESPONSES=false
VITE_LOG_ERRORS=true
VITE_LOG_PERFORMANCE=true

# ================================
# CONFIGURACIÓN DE INTERNACIONALIZACIÓN
# ================================
VITE_DEFAULT_LANGUAGE=es
VITE_SUPPORTED_LANGUAGES=es,ca,eu,gl
VITE_ENABLE_TRANSLATIONS=true

# ================================
# CONFIGURACIÓN DE ACCESIBILIDAD
# ================================
VITE_ENABLE_ACCESSIBILITY_FEATURES=true
VITE_HIGH_CONTRAST_MODE=false
VITE_LARGE_TEXT_MODE=false
VITE_KEYBOARD_NAVIGATION=true

# ================================
# CONFIGURACIÓN DE PWA
# ================================
VITE_ENABLE_PWA=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_PWA_UPDATE_INTERVAL=3600000

# ================================
# CONFIGURACIÓN DE TESTING
# ================================
# Solo para entornos de testing
# VITE_ENABLE_TEST_MODE=false
# VITE_TEST_API_DELAY=0
# VITE_MOCK_API_FAILURES=false

# ================================
# VARIABLES DE SISTEMA
# ================================
NODE_ENV=production
CI=false
GENERATE_SOURCEMAP=false
BUILD_PATH=./dist
PUBLIC_URL=/

# Puerto del servidor (debe coincidir con nginx)
PORT=5173
VITE_PORT=5173
