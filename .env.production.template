# Variables de entorno para producción - VPS

# Información de la aplicación
VITE_APP_NAME=SubvencionesPro
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=production

# APIs - IMPORTANTE: Usar rutas del proxy local para evitar CORS
VITE_API_BDNS_URL=/api/bdns
VITE_API_SNPSAP_URL=/api/snpsap
VITE_API_DATOS_GOB_URL=/api/datos

# Configuración de producción
VITE_DEV_MODE=false
VITE_MOCK_DATA=false
VITE_DEBUG=false

# Timeouts optimizados para producción
VITE_CACHE_TIMEOUT=300000
VITE_API_TIMEOUT=30000

# Límites de producción
VITE_MAX_EXPORT_ITEMS=1000
VITE_MAX_SEARCH_RESULTS=500
VITE_PAGE_SIZE=20

# Features habilitadas en producción
VITE_FEATURE_ALERTS=true
VITE_FEATURE_EXPORT=true
VITE_FEATURE_DASHBOARD=true
VITE_FEATURE_ADVANCED_FILTERS=true

# URLs de servicios (opcional)
VITE_SUPPORT_URL=https://support.tudominio.com
VITE_DOCS_URL=https://docs.tudominio.com
VITE_FEEDBACK_URL=https://feedback.tudominio.com

