# Archivo de configuración para SubvencionesPro v2.0

# ========================================
# CONFIGURACIÓN DE DESARROLLO
# ========================================

# Modo de desarrollo - siempre muestra datos de ejemplo
VITE_DEV_MODE=true

# Activar datos de ejemplo (mock data)
VITE_MOCK_DATA=true

# ========================================
# CONFIGURACIÓN DE APIS
# ========================================

# URLs base de las APIs gubernamentales (para producción)
VITE_API_BDNS_URL=https://www.pap.hacienda.gob.es/bdnstrans/GE/es/convocatorias
VITE_API_SNPSAP_URL=https://www.infosubvenciones.es/bdnstrans/es/index
VITE_API_DATOS_GOB_URL=https://datos.gob.es/apidata
VITE_API_BASE_URL=

# Timeouts
VITE_API_TIMEOUT=30000
VITE_CACHE_TIMEOUT=300000

# Claves de API (vacías para demo)
VITE_API_KEY=
VITE_API_KEY_BDNS=
VITE_API_KEY_SNPSAP=
VITE_API_KEY_DATOS_GOB=

# ========================================
# CONFIGURACIÓN DE FUNCIONALIDADES
# ========================================

# Activar exportación de datos
VITE_ENABLE_EXPORT=true

# Activar sistema de alertas
VITE_ENABLE_ALERTS=true

# Activar dashboard de estadísticas
VITE_ENABLE_DASHBOARD=true

# ========================================
# CONFIGURACIÓN DE INTERFAZ
# ========================================

# Número de resultados por página por defecto
VITE_DEFAULT_PAGE_SIZE=20

# Activar modo oscuro
VITE_DARK_MODE=false

# Idioma por defecto
VITE_DEFAULT_LANGUAGE=es

# ========================================
# CONFIGURACIÓN DE CACHE
# ========================================

# Activar cache local
VITE_ENABLE_CACHE=true

# Tiempo de vida del cache (en milisegundos)
VITE_CACHE_TTL=300000

# ========================================
# INFORMACIÓN DE LA APLICACIÓN
# ========================================

# Versión de la aplicación
VITE_APP_VERSION=2.0.0

# Nombre de la aplicación
VITE_APP_NAME=SubvencionesPro

# Descripción
VITE_APP_DESCRIPTION=Plataforma profesional para búsqueda y análisis de subvenciones gubernamentales
